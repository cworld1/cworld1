---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

import { cn } from 'astro-pure/utils'

const {
  as: Tag = 'a',
  class: className,
  href,
  heading,
  subheading,
  imagePath,
  altText
} = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/projects/*.{jpeg,jpg,png,gif}'
)
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/projects/*.{jpeg,jpg,png,gif}"`
  )
---

<Tag
  class={cn(
    className,
    'group overflow-hidden relative flex flex-col gap-y-3 rounded-2xl border bg-muted ',
    href && 'transition-all hover:border-foreground/25 hover:shadow-sm'
  )}
  href={href}
  target='_blank'
>
  <Image
    src={images[imagePath]()}
    alt={altText ?? heading}
    class='absolute top-0 h-36 w-full object-cover opacity-60 transition-opacity group-hover:opacity-100 dark:opacity-35'
    loading='lazy'
  />
  <div
    class='z-10 flex flex-col gap-y-0.5 bg-gradient-to-b from-transparent to-primary-foreground to-65% px-5 pb-4 pt-24 transition-all group-hover:to-80%'
  >
    <h2 class='text-lg font-medium'>{heading}</h2>
    <p class='text-muted-foreground'>{subheading}</p>
  </div>
  <slot />
</Tag>
